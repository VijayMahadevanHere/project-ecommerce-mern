<div style="margin-top: 50px; height:520px; background-image: url(https://imgeng.jagran.com/images/2023/mar/Adidas%20Shoes%20Vs%20Nike%20Shoes1678717317612.jpg);">
<section class="content-main" style="padding: 2rem; " >
  <div class="content-header">
    <h3 style="text-align: center; padding: 1rem;color: #fff;">Profile</h3>
  </div>
  <div class="card" style="background-color: rgb(146, 146, 248);">
    <div class="card-body">
      <div class="row gx-5">
        <aside class="col-lg-3 border-end">
          <nav class="nav bg-light text-light flex-lg-column mb-4">
            <a class="nav-link active text-dark" aria-current="page" href="#">General</a>
          </nav>
          <nav class="nav bg-light text-light flex-lg-column mb-4">
            <a class="nav-link active text-dark" aria-current="page" data-toggle="modal" data-target="#exampleModal" href="#">Address</a>
          </nav>
          <nav class="nav bg-light text-light flex-lg-column mb-4">
            <a class="nav-link active text-dark" aria-current="page" href="/new_address">Add Address</a>
          </nav>
        </aside>
        <div class="col-lg-9">
          <section class="content-body p-xl-4">
            <form id="profile">
              <div class="row">
                <div class="col-lg-8">
                  <div class="row gx-3">
                    <div class="col-12 mb-3">
                      <label class="form-label">User Name</label>
                      <input class="form-control" name="fname" id="name" type="text" value="<%=data.username%>" required="" value="<%=data.username%>" onkeyup="validateName()" style="margin-bottom: 1rem;" />
                      <span id="name-error" class="validation-label"></span>
                    </div>
                    <div class="col-lg-6 mb-3">
                      <label class="form-label">Email</label>
                      <input class="form-control" name="email" id="email" type="email" value="<%=data.email%>" onkeyup="validateEmail()" required style="margin-bottom: 1rem;" />
                      <span id="email-error" class="validation-label"></span>
                    </div>
                    <div class="col-lg-6 mb-3">
                      <label class="form-label">Phone</label>
                      <input class="form-control" name="phone" type="number" value="<%=data.phoneNumber%>" id="phone" onkeyup="validatePhone()" required="" style="margin-bottom: 1rem;" />
                      <span id="phone-error" class="validation-label"></span>
                    </div>
                  </div>
                </div>
              </div>
              <br />
              <button class="btn btn-dark ml-2 mr-2" onclick="if(validate()==true){changeProfile('<%=data._id%>')}" style="background-color: #212529; color: #fff;">Save changes</button>
            </form>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>


