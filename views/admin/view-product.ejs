<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Product List</h2>
          <form
            
            method="POST"
            enctype="multipart/form-data"
          >
            
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- Table section -->
  <section  mx-auto>
    <div class="card-body">
      <div class="row mt-5 mx-auto">
        <div class="table-responsive">
          <div class="table-responsive">
            <table class="table align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr>
                  <th class="align-middle" scope="col">No:</th>
                  <th class="align-middle" scope="col">Image</th>
                  <th class="align-middle" scope="col">product Name</th>
                  <th class="align-middle" scope="col">Discription</th>
                  <th class="align-middle" scope="col">Category</th>
                  <th class="align-middle" scope="col">price</th>
                  <!-- <th class="align-middle" scope="col">Category</th> -->
                  <th class="align-middle" scope="col">Quantity</th>
                 
                  <th class="align-middle" scope="col">option</th>
                </tr>
              </thead>
              <tbody>
                <% response.forEach(function(response,index) { %>
                <tr>
                  <td><%=index+1 %> </td>
                  <td><img src="/uploads/<%=response.Image[0]%>" alt="" style="width:90px;height:100px";></td>
                  <td>
                    <p><%=response.Productname%></p>
                

                  </td> 
                  
                 <td>
                  <small><%=response.ProductDescription%></small>
                 </td>
                  <td><%=response.Category%></td> 
                  
                  <td><%=response.Price%></td> 
                  <!-- <td><%=response.category%></td>  -->
                  <td><%=response.Quantity%></td> 
                
                  
                  <td>
                        <a href ="/admin/edit-product/<%=response._id %>"  class="btn btn-success">Edit</a>
                 
                        <a href ="/admin/delete-product/<%=response._id %>" class="btn btn-danger" onclick="deleteAlert()">Delete</a>
                  </td>
    
                 
                </tr>
          <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- table-responsive end// -->
      </div>
    </div>
  </section>

