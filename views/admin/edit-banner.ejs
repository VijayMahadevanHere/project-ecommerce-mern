<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit banner</h2>
          <form action="/admin/edit-banner/<%=editBanner._id %>" method="POST" enctype="multipart/form-data">
           
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" value="<%=editBanner.Productname%>" />
            <label for="">Image</label>
            <img src="/uploads/<%=editBanner.Image%>" alt="" style="width:100px;height:auto" id="imageEdit" class="mt-3 mb-3">
            <input type="file" name="file2" class="form-control" onchange="changeImage(event)" />
  
            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
    changeImage(events)
    {
      document.getElementById('imageEdit').src = URL.createObjectURL(events.target.files[0])
    }
  </script>